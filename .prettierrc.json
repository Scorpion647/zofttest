{
  "plugins": [
    "prettier-plugin-pkg",
    "prettier-plugin-sh",
    "prettier-plugin-sql",
    "prettier-plugin-tailwindcss",
    "prettier-plugin-toml"
  ],
  "experimentalTernaries": true,
  "bracketSameLine": true,
  "overrides": [
    {
      "files": ["*.sql"],
      "options": {
        "language": "postgresql",
        "keywordCase": "upper",
        "dataTypeCase": "upper",
        "functionCase": "upper",
        "identifierCase": "lower",
        "linesBetweenQueries": 1
      }
    }
  ]
}
